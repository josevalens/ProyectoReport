@model REPORTECRUD.Models.Reporte;
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="bg-dark text-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">REPOR-T</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Listar">Usuarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Inventario" asp-action="Listar">Inventario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4 class="card-title">Guardar</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Guardar" asp-controller="Reporte" method="post" class="row g-3">

                        <div class="col-md-6">
                            <label class="form-label text-dark">Tipo de Reporte</label>
                            <select asp-for="refTipoReporte.IdTipoReporte" class="form-select"
                                    asp-items="@(ViewBag.Lista != null ? new SelectList(ViewBag.Lista, "Value", "Text") : new List<SelectListItem>())">
                                <option value="">Seleccione el Tipo de Reporte</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-dark">Ubicación</label>
                            <select asp-for="refUbicacion.IdUbicacion" class="form-select"
                                    asp-items="@(ViewBag.ListaB != null ? new SelectList(ViewBag.ListaB, "Value", "Text") : new List<SelectListItem>())">
                                <option value="">Seleccione la Ubicación</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-dark">Fecha Creación</label>
                            <input asp-for="FechaCreacion" type="date" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-dark">Problemática</label>
                            <input asp-for="Problematica" type="text" class="form-control" />
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-dark">Guardar</button>
                             <a asp-action="Listar" asp-controller="Reporte" class="btn btn-warning">Volver a la lista</a>
                        </div>
                    </form>
                </div>
                <div class="col-md-14 mb-3 position-fixed bottom-0 end-0 p-5">
                    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">VOLVER A MENÚ</a>
                </div>
            </div>
        </div>
    </div>
</div>


