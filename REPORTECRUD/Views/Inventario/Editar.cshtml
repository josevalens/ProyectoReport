@model InventarioModels;
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <header class="bg-dark text-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">REPOR-T</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Listar">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reporte" asp-action="Listar">Reportes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <h1 class="text-center">Editar</h1>
    <div class="card col-8 mx-auto">
        <div class="card-header bg-dark text-light">
            Editar Dispositivo
        </div>
        <div class="card-body">
            <form asp-action="Editar" asp-controller="Inventario" method="post">
                <input asp-for="IdDispositivo" type="hidden" class="form-control" />

                <div class="mb-3">
                    <label for="Tipo" class="form-label">Tipo de dispositivo</label>
                    <input asp-for="Tipo" type="text" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" type="text" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="Modelo" class="form-label">Modelo</label>
                    <input asp-for="Modelo" type="text" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="Marca" class="form-label">Marca</label>
                    <input asp-for="Marca" type="text" class="form-control" />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-dark">Guardar</button>
                    <a asp-action="Listar" asp-controller="Inventario" class="btn btn-warning">Volver a la lista</a>
                </div>
            </form>
        </div>
        <div class="col-md-14 mb-3 position-fixed bottom-0 end-0 p-5">
            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">VOLVER A MENU</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

