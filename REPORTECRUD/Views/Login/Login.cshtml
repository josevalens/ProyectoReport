@model REPORTECRUD.Models.UsuarioModelo;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white mx-auto" asp-area="" asp-controller="Home" asp-action="Index">REPOR-T</a>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-dark text-white">
                        <h1 class="text-center">Iniciar Sesión</h1>
                    </div>
                    <div class="card-body">
                        <form asp-action="Login" asp-controller="Login" method="post">
                            <div class="mb-3">
                                <label for="Correo" class="form-label">Correo electrónico</label>
                                <input type="email" class="form-control" asp-for="Correo" placeholder="nombre@gmail.com" required>
                            </div>
                            <div class="mb-3">
                                <label for="Contraseña" class="form-label">Contraseña</label>
                                <input type="password" class="form-control" asp-for="Contraseña" placeholder="contraseña" required>
                            </div>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-dark" type="submit">Iniciar Sesión</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <span>¿No tienes cuenta? <a asp-action="Registro" asp-controller="Login">Registrarse</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

