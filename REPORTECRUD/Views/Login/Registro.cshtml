@model REPORTECRUD.Models.UsuarioModelo;
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Registro</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white mx-auto" asp-area="" asp-controller="Home" asp-action="Index">REPOR-T</a>
            </div>
        </nav>
    </header>

    <div class="container">
        <h1 class="text-center text-light">Registro</h1>
        <div class="modal-body p-5 pt-0">
            <form asp-action="Registro" asp-controller="Login" method="post">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control rounded-3" asp-for="Nombre" id="floatingInputNombre" placeholder="Nombre">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                    <label for="floatingInputNombre" class="text-dark">Nombre</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control rounded-3" asp-for="Correo" id="floatingInputCorreo" placeholder="correo@example.com">
                    <span asp-validation-for="Correo" class="text-danger"></span>
                    <label for="floatingInputCorreo" class="text-dark">Correo</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control rounded-3" asp-for="Contraseña" id="floatingPassword" placeholder="Contraseña">
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                    <label for="floatingPassword" class="text-dark">Contraseña</label>
                </div>
                <button class="w-100 mb-2 btn btn-lg rounded-3 btn-dark" type="submit">Registrarse</button>
                @if (!string.IsNullOrEmpty(ViewData["Mensaje"] as string))
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                }
                <span class="text-dark">¿Ya tienes cuenta?</span><a asp-action="Login" asp-controller="Login" class="text-dark">Iniciar sesión</a>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



