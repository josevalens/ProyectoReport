@model REPORTECRUD.Models.UsuarioModelo;
@{
    ViewData["Title"] = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cambiar Contraseña</h1>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<form asp-action="CambiarContraseña" asp-controller="Login" method="post">
    <div class="form-floating mb-3">
        <input type="email" class="form-control rounded-3" asp-for="Correo" id="floatingInput" placeholder="name@example.com" required>
        <label for="floatingInput">Correo</label>
    </div>
    <div class="form-floating mb-3">
        <input type="password" class="form-control rounded-3" asp-for="Contraseña" id="floatingPassword" placeholder="Password" required>
        <label for="floatingPassword">Inserte su nueva contraseña</label>
    </div>
    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-outline-warning" type="submit">Cambiar contraseña</button>
    @if (!string.IsNullOrEmpty(ViewData["Mensaje"] as string))
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["Mensaje"]
        </div>
    }
</form>


