@model UsuarioModelo;
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<header class="bg-dark text-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">REPOR-T</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Invitario" asp-action="Listar">Inventario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Reporte" asp-action="Listar">Reportes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesion</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <h1 class="text-center text-dark mt-4">Eliminar</h1>

    <div class="card col-12 col-md-8 mx-auto">
        <div class="card-header bg-dark text-light">
            Eliminar usuario
        </div>
        <div class="card-body text-center">
            <form asp-action="Eliminar" asp-controller="Usuario" method="post">
                <input asp-for="IdUsuario" type="hidden" class="form-control" />
                <div class="alert alert-danger" role="alert">
                    ¿Deseas eliminar a: @Html.DisplayFor(n => n.Nombre)?
                </div>

                <div class="col-md-12 mb-3 d-flex justify-content-center">
                    <input type="submit" value="Eliminar" class="btn btn-danger me-3" />
                    <a asp-action="Listar" asp-controller="Usuario" class="btn btn-warning">Volver a la lista</a>
                </div>
            </form>
        </div>
        <div class="col-md-14 mb-3 position-fixed bottom-0 end-0 p-5">
            <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">VOLVER A MENU</a>
        </div>
    </div>
</div>
